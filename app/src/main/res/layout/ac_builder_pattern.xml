<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snowy.demo.zdesignpattern.builderpattern.BuilderPatternActivity"
    android:background="@color/all_ac_bg">

    <Button
        android:id="@+id/bt_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="build"
        android:textSize="16sp"
        android:textColor="@color/all_ac_bg"
        android:background="@drawable/sel_menu2"/>
    <TextView
        android:id="@+id/tv_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_builder"
        android:layout_margin="10dp"
        android:textSize="14sp"/>
</RelativeLayout>