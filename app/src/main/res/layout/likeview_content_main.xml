<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.ayo.opensource.zlikeview.LikeButton
            app:liked="true"
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_size="25dp"
            app:icon_type="star" />

        <com.ayo.opensource.zlikeview.LikeButton
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_size="25dp"
            app:icon_type="heart" />

        <com.ayo.opensource.zlikeview.LikeButton
            android:id="@+id/thumb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:circle_end_color="#2233dd"
            app:circle_start_color="#2233dd"
            app:dots_primary_color="#2233dd"
            app:dots_secondary_color="#2233dd"
            app:icon_size="25dp"
            app:like_drawable="@drawable/thumb_on"
            app:unlike_drawable="@drawable/thumb_off" />

        <com.ayo.opensource.zlikeview.LikeButton
            android:id="@+id/smile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:circle_end_color="#22dd44"
            app:circle_start_color="#aadd44"
            app:dots_primary_color="#2244dd"
            app:dots_secondary_color="#0000dd"
            app:icon_size="25dp" />
    </LinearLayout>
</RelativeLayout>
