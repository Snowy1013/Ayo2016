<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <com.ayoview.sample.zbutton.AnimCheckBox
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        app:animcheckbox_stroke_width="2dp"
        app:animcheckbox_stroke_color="#607D8B"
        app:animcheckbox_circle_color="#795548"/>

    <com.ayoview.sample.zbutton.AnimCheckBox
        android:id="@+id/checkbox_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="60dp"
        android:padding="4dp"
        android:layout_height="60dp"
        app:animcheckbox_stroke_width="3dp"
        app:animcheckbox_stroke_color="#9C27B0"
        app:animcheckbox_circle_color="#FFFFFF"/>

    <com.ayoview.sample.zbutton.AnimCheckBox
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:animcheckbox_stroke_width="4dp"
        app:animcheckbox_stroke_color="#2196F3"
        app:animcheckbox_circle_color="#1976D2"/>

    <com.ayoview.sample.zbutton.AnimCheckBox
        android:id="@+id/checkbox_2"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:animcheckbox_stroke_width="4dp"
        app:animcheckbox_stroke_color="#009688"
        app:animcheckbox_circle_color="#4CAF50"/>
    <com.ayoview.sample.zbutton.AnimCheckBox
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:padding="6dp"
        android:layout_height="wrap_content"
        app:animcheckbox_stroke_width="4dp"
        app:animcheckbox_stroke_color="#512DA8"
        app:animcheckbox_circle_color="#9C27B0"/>

</LinearLayout>
