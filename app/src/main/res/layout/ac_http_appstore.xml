<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_ac_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/text_menu1_normal">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_menu3_pressed" />
        <com.snowy.demo.zhttp.appstore.PagerSlidingTab xmlns:app="http://schemas.android.com/apk/res/com.cowthan.sample"
            android:id="@+id/pst_appstore_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:dividerColor="@color/text_menu2_normal"
            app:shouldExpand="true" />
    </RelativeLayout>

        <com.snowy.demo.zhttp.appstore.ViewPagerCompat
        android:id="@+id/vpc_appstore_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true" />
</LinearLayout>
