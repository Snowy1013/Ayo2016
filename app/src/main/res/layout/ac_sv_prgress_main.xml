<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    >

    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="show" />

    <Button
        android:id="@+id/btn_showWithMaskType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showWithMaskType" />

    <Button
        android:id="@+id/btn_showWithStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showWithStatus" />

    <Button
        android:id="@+id/btn_showInfoWithStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showInfoWithStatus" />

    <Button
        android:id="@+id/btn_showSuccessWithStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showSuccessWithStatus" />

    <Button
        android:id="@+id/btn_showErrorWithStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showErrorWithStatus" />

    <Button
        android:id="@+id/btn_showWithProgress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="showWithProgress" />

</LinearLayout>
